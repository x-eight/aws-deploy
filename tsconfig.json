{
  "compilerOptions": {
      "incremental": true,
      "target": "ES2021",
      "module": "commonjs",
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "skipLibCheck": true,
      "strictPropertyInitialization": false,
      "outDir": "./build",
      "rootDir": "./src",
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true
  },
  "exclude": ["test", "jest.config.ts", "node_modules"]
}
